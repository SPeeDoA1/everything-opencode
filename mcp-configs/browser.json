{
  "$schema": "https://opencode.ai/schema/mcp-config.json",
  "name": "browser",
  "description": "Web browsing capabilities for fetching and interacting with web pages",
  
  "config": {
    "command": "npx",
    "args": ["-y", "@anthropic/mcp-puppeteer"],
    "env": {}
  },

  "setup": {
    "steps": [
      "1. Ensure Chrome/Chromium is installed on your system",
      "2. The MCP server will use Puppeteer for browser automation",
      "3. No additional configuration required for basic usage"
    ],
    "requirements": [
      "Node.js 18+",
      "Chrome/Chromium browser"
    ]
  },

  "capabilities": [
    "Navigate to URLs",
    "Read page content",
    "Take screenshots",
    "Execute JavaScript",
    "Fill forms",
    "Click elements",
    "Wait for elements"
  ],

  "examples": {
    "basic": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-puppeteer"]
    },
    "headless": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-puppeteer", "--headless"]
    },
    "with_proxy": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-puppeteer"],
      "env": {
        "HTTP_PROXY": "http://proxy.example.com:8080"
      }
    }
  },

  "use_cases": [
    "Fetching documentation from websites",
    "Testing web applications",
    "Scraping public data",
    "Generating screenshots for review",
    "Interacting with web APIs that require browser"
  ],

  "security": {
    "recommendation": "Be cautious about which URLs you allow access to",
    "tips": [
      "Avoid logging into personal accounts",
      "Don't store credentials in automation",
      "Be respectful of robots.txt",
      "Consider rate limiting requests"
    ]
  }
}
