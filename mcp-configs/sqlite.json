{
  "$schema": "https://opencode.ai/schema/mcp-config.json",
  "name": "sqlite",
  "description": "SQLite database integration for local database access",
  
  "config": {
    "command": "npx",
    "args": ["-y", "@anthropic/mcp-sqlite", "${DATABASE_PATH}"],
    "env": {}
  },

  "setup": {
    "steps": [
      "1. Identify your SQLite database file path",
      "2. Replace ${DATABASE_PATH} with the actual path",
      "3. Ensure the file exists and is readable"
    ]
  },

  "capabilities": [
    "Execute SQL queries",
    "Inspect table schemas",
    "List tables",
    "Read data",
    "Write data (if not read-only)"
  ],

  "examples": {
    "basic": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-sqlite", "./data/app.db"]
    },
    "read_only": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-sqlite", "--read-only", "./data/app.db"]
    },
    "multiple_databases": {
      "command": "npx",
      "args": [
        "-y", 
        "@anthropic/mcp-sqlite",
        "./data/users.db",
        "./data/products.db"
      ]
    }
  },

  "security": {
    "recommendation": "Use read-only mode for production databases",
    "tips": [
      "Keep database files outside of web-accessible directories",
      "Use file system permissions to restrict access",
      "Consider using WAL mode for better concurrency"
    ]
  }
}
